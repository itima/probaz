<h1>New admin</h1>

<% form_for(@admin) do |f| %>
  <%= f.error_messages %>
  <p><%= f.hidden_field :sysadmin, false %></p>
  <p>
    <%= f.label :kod %><br />
    <%= f.text_field :kod %>
  </p>
  <p>
    <%= f.label :pass %><br />
    <%= f.password_field :pass %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admins_path %>