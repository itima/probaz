<h1>Цвет волос</h1>

<table>
  <tr>
    <th>Название</th>
  </tr>

<% @haircolors.each do |haircolor| %>
  <tr>
    <td><%= link_to haircolor.name, edit_haircolor_path(haircolor) %></td>
    <td><%= link_to 'Удалить', haircolor, :confirm => 'Вы уверенны?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Новый цвет', new_haircolor_path %>
<br />
<%= link_to "назад",adminmain_path_url(:page => 4)  %>