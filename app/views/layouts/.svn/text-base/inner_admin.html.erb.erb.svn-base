<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"    "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ru" >
  <head>
    <title>Administrators: <%= h(@title) %> - Probaz.ru</title>
    <%= stylesheet_link_tag 'stylesheet' %>
    <%= stylesheet_link_tag 'lightbox' %>

    <script type="text/javascript" src="/javascripts/prototype.js"></script>
    <script type="text/javascript" src="/javascripts/scriptaculous.js?load=effects,builder"></script>
    <script type="text/javascript" src="/javascripts/lightbox.js"></script>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">

      <div id="top_menu">
        <ul>
          <li><%= link_to "Выход",:controller => 'main', :action => 'logout' %></li>
        </ul>
      </div><!-- end top_menu -->
      <div id="header">
        <div id="logo"><a href="/">probaz.ru</a></div>
        <div class="leftTabs">

          <% if @page=="0" then%>
            <div class="activeTab">
            <% else %>
              <div class="Tab">
              <% end %>
              <div class="tabLeftCorner"></div>
              <div class="tabContent"><a href="<%= adminmain_path_url (:page => 0) %>">Непроверенные анкеты</a></div>
              <div class="tabRightCorner"></div>
            </div>

            <% if @page=="1" then%>
              <div class="activeTab">
              <% else %>
                <div class="Tab">
                <% end %>
                <div class="tabLeftCorner"></div>
                <div class="tabContent"><a href="<%= adminmain_path_url(:page => 1)  %>">Все анкеты</a></div>
                <div class="tabRightCorner"></div>
              </div>

              <% if @page=="2" then%>
                <div class="activeTab">
                <% else %>
                  <div class="Tab">
                  <% end %>
                  <div class="tabLeftCorner"></div>
                  <div class="tabContent"><a href="<%= adminmain_path_url(:page => 2) %>">Непроверенные организации</a></div>
                  <div class="tabRightCorner"></div>
                </div>

                <% if @page=="3" then%>
                  <div class="activeTab">
                  <% else %>
                    <div class="Tab">
                    <% end %>
                    <div class="tabLeftCorner"></div>
                    <div class="tabContent"><a href="<%= adminmain_path_url(:page => 3) %>">Все организации</a></div>
                    <div class="tabRightCorner"></div>
                  </div>

                  <% if @page=="4" then%>
                    <div class="activeTab">
                    <% else %>
                      <div class="Tab">
                      <% end %>
                      <div class="tabLeftCorner"></div>
                      <div class="tabContent"><a href="<%= adminmain_path_url(:page => 4) %>">Справочники</a></div>
                      <div class="tabRightCorner"></div>
                    </div>
                  </div>
                </div><!-- end header -->


                <div id="content1col">
                  <div class="col1">
                    <%= render :partial => "main/flash", :object => flash %>
                    <%= yield %>
                  </div>
                </div><!-- end main -->

                <div id="push" class="clearfix"> </div>

              </div>

              <div id="footer">
                <p id="footer-text"> Copyright 2009 by probaz.ru</p>
                <p></p>
              </div>
                	<%= render :partial => "main/counters" %>
              </body>

              </html>